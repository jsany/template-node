{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2015"],
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@@/*": ["./*"], // 根目录别名
      "@/*": ["./src/*"] // src 目录别名
    },
    "pretty": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "downlevelIteration": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*","package.json"],
  "exclude": ["node_modules", "**/test/*", "__test__", "**/*.spec.ts", "lib", "es", "dist", "build"]
}